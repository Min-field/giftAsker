.template-wrap {
  background: #ccc;
  padding: 30rpx 20rpx;
}

.template {
  background: #fff;
  text-align: center;
}

.dots-wrap {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #D7D7D7;
  margin: 0 5rpx;
}

.picked-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #676767;
  margin: 0 5rpx;
}

.modal-btns {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.modal-btns view {
  width: 50%;
  text-align: center;
}

.btns {
  padding: 10rpx;
  display: flex;
  justify-content: space-around;
}

.btns view {
  border: 1rpx solid #C64242;
  color: #C64242;
  box-sizing: border-box;
  width: 40%;
  text-align: center;
  padding: 20rpx 0;
}

.condition {
  display: flex;
  justify-content: center;

  border: 1rpx solid #DBB758;
  border-radius: 10rpx;
  margin: 30rpx;
  padding: 30rpx 10rpx;
}

.give {
  width: 100rpx;
  background: #E9E9E9;
  text-align: center;
}

.back {
  width: 200rpx;
  background: #E9E9E9;
  text-align: center;
}

.close-modal {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #D0CECE;
  color: #fff;
}

.gifts {
  height: 500rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap; 
}

.gift {
  border: 1rpx solid #222;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
}
